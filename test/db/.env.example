# Oracle Database Configuration for MCP Server
# Use this with the Oracle XE container (docker-compose-simple.yml)

# Connection details for Oracle XE
ORACLE_CONNECTION_STRING=testuser/testpass@localhost:1521/XEPDB1

# Alternative connection strings:
# For system user: system/Welcome123@localhost:1521/XEPDB1
# For SYS user: sys/Welcome123@localhost:1521/XEPDB1 as sysdba

# Database settings
ORACLE_SID=XE
ORACLE_PDB=XEPDB1
ORACLE_PWD=Welcome123
ORACLE_CHARACTERSET=AL32UTF8

# MCP Server settings
MCP_SERVER_PORT=3000
DEBUG=true
